{
    "compilerOptions": {
      "outDir": "./dist",  // Outputs the compiled JS here
      "module": "commonjs",
      "target": "es6",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": ".", // Set the base URL for module resolution
      "paths": {
        "@/*": ["client/src/*"], // Map '@' to the 'client/src' directory
        "@/components/*": ["client/src/components/*"],
        "@/hooks/*": ["client/src/hooks/*"],
        "@/models/*": ["models/*"],
        "@/pages/*": ["client/src/pages/*"],
        "@/styles/*": ["client/src/styles/*"],
        "@/utils/*": ["client/src/utils/*"],
        "@/contexts/*": ["client/src/contexts/*"]
      }
    },
    "include": ["server/**/*.ts"],    // Include all your TypeScript files inside the src directory
    "exclude": ["node_modules", "dist"]
  }
