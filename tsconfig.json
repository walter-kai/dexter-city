{
    "compilerOptions": {
      "outDir": "./dist",  // Outputs the compiled JS here
      "module": "commonjs",
      "target": "es6",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".", // Set the base URL for module resolution
      "paths": {
        "@/*": ["client/src/*"] // Map '@' to the 'client/src' directory
      }
    },
    "include": ["src/**/*.ts"],    // Include all your TypeScript files inside the src directory
    "exclude": ["node_modules", "dist"]
  }
