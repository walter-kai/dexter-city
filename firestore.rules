rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    // The document ID is the wallet address (lowercase)
    // The Firebase UID is also the wallet address (lowercase)
    match /users/{walletAddress} {
      allow read, write: if request.auth != null 
        && request.auth.uid == walletAddress
        && request.auth.token.walletAddress == walletAddress;
    }
    
    // Example for other collections where users own data
    match /userPosts/{postId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.ownerWalletAddress;
    }
    
    // Public read access for certain data
    match /publicData/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
